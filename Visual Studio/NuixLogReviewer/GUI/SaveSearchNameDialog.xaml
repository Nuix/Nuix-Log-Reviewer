<Window x:Class="NuixLogReviewer.GUI.SaveSearchDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NuixLogReviewer.GUI"
        mc:Ignorable="d"
        Title="Saved Search Name" Width="600"
        SizeToContent="Height"
        WindowStartupLocation="CenterOwner"
        >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="64"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="32"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>

        <Label Foreground="DarkRed" Name="lblFeedback" Grid.Row="0" Grid.Column="1" FontSize="16"/>

        <Label Content="Name" Grid.Row="1" Grid.Column="0"/>
        <TextBox x:Name="txtName" Grid.Row="1" Grid.Column="1" VerticalContentAlignment="Center"/>

        <Button Content="Save" Grid.Row="3" Grid.Column="2" Name="btnSave" Click="btnSave_Click" Margin="5"/>
    </Grid>
</Window>
